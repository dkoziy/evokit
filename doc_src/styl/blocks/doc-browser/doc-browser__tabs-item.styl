.doc-browser__tabs-item
    position: relative
    padding: 0 30px
    cursor: pointer
    z-index: 5
    user-select: none
    line-height: 2.1em
    font-size: .9em

    &:after
        content: ''
        position: absolute
        top: -.5em
        right: 0
        bottom: 0
        left: 0
        z-index: -1
        background: #dedede
        transform: perspective(5px) rotateX(2deg)
        transform-origin: bottom
        box-shadow: 0 -1px 1px 0 rgba(0,0,0, .05) inset
        border-radius: 5px 5px 0 0

    & + &
        margin-left: -5px
