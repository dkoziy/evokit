@import './mixins.sss'

@mixin media .list_color___TEMPLATE_NAME__
    & > .list__item
        &:before
            color: var(--ek-__TEMPLATE_NAME__-text-color)

@mixin media .list_divider___TEMPLATE_NAME__
    & > .list__item
        & + .list__item
            border-top: 1px solid var(--ek-__TEMPLATE_NAME__-divider-color)
