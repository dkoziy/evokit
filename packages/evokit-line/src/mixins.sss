@define-mixin media $selector
    $selector
        @mixin-content

    @media (--ek-line-media-small)
        $(selector)\@small
            @mixin-content

    @media (--ek-line-media-medium)
        $(selector)\@medium
            @mixin-content

    @media (--ek-line-media-large)
        $(selector)\@large
            @mixin-content

    @media (--ek-line-media-wide)
        $(selector)\@wide
            @mixin-content

    @media (--ek-line-media-huge)
        $(selector)\@huge
            @mixin-content
