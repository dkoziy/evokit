// Global variables
@import '../vars/base'
@import '../functions'
@import '../mixins/media'

// Laptop XL
media-add('xlarge', '(min-width: 1200px)')

// Laptop XXL
media-add('xxlarge', '(min-width: 1400px)')

// Laptop XXXL
media-add('xxxlarge', '(min-width: 1600px)')

// ui-page settings
$global-page['padding'] = (0 20px)
$global-page['min-width'] = 1000px
$global-page['max-width'] = 1240px

+prefix-classes('ui-')
    // Blocks
    @import '../blocks/body'
    @import '../blocks/grid'
    @import '../blocks/panel'
    @import '../blocks/box'
    @import '../blocks/list'
    @import '../blocks/text'
    @import '../blocks/link'
    @import '../blocks/picture'
    @import '../blocks/image'
    @import '../blocks/line'
    @import '../blocks/tags'

    // helpers
    @import '../helpers/width'
