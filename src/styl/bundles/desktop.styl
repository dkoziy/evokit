// Global variables
@import '../vars/base'
@import '../functions'
@import '../mixins/media'

// Laptop L
media-add('xlarge', '(min-width: 1200px)')

// Laptop XL
media-add('xxlarge', '(min-width: 1400px)')

// ui-page settings
$ui-page['padding'] = (0 20px)
$ui-page['min-width'] = 1000px
$ui-page['max-width'] = 1240px

// ui-title settings
$ui-title = {
    h1: 24px
    h2: 22px
    h3: 20px
    h4: 18px
    h5: 16px
    h6: 14px
}

// Common
@import '../blocks/ui-title'
@import '../blocks/ui-text'
@import '../blocks/ui-link'
@import '../blocks/ui-line'

// Layout
@import '../blocks/ui-page'
@import '../blocks/ui-box'
@import '../blocks/ui-grid'
@import '../blocks/ui-panel'
@import '../blocks/ui-width'

// Elements
@import '../blocks/ui-list'
@import '../blocks/ui-picture'

// Media
media-apply()
