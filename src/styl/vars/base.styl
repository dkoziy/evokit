// THEMES
$GRID_SIZES = {
    none: 0
    xxs: 5px
    xs: 10px
    s: 15px
    m: 20px
    l: 25px
    xl: 30px
    xxl: 35px
    xxxl: 40px
}

$FONT_COLORS = {
    base: #3c3c3c
    white: #ffffff
    link: #5e8fd5
    red: #f55832
    yellow: #facd00
    muted: #a0b0c7
    success: #33b600
    info: #5e8fd5
    warning: #ff9600
    error: #bb2914
}

$FONT_WEIGHTS = {
    base: 400
    thin: 100
    light: 300
    medium: 500
    bold: 700
    black: 900
}

$FONT_SIZES = {
    base: 13px
    h1: 24px
    h2: 22px
    h3: 20px
    h4: 18px
    h5: 16px
    h6: 14px
}

$BG_COLORS = {
    transparent: transparent
    white: #ffffff
    gray: #f7f7f7
    blue: #ebf3f9
    success: #d0efcc
    info: #dde7f5
    warning: #fcf1bd
    error: #efd2ce
}

// BLOCKS SETTING
$uikit-base = {
    font-family: 'Roboto'\, Arial\, sans-serif
    font-size: $FONT_SIZES['base']
    line-height: 1.3em //Temporarily not used in .body
    color: $FONT_COLORS['base']
    background-color: #fff
    min-width: 1000px
    font-weight: $FONT_WEIGHTS['base']
}

$uikit-body = {
    section: {
        padding: (0 20px)
        min-width: 1000px
        max-width: 1240px
        size: {
            xl: 1440px
            xxl: 1640px
            xxxl: 1840px
        }
    }
}


// blocks settings

$global-size = $GRID_SIZES

$global-line-color = #dde8f0

$global-page = {
    padding: ()
    min-width: false
    max-width: false
}

$global-link = {
    colors: $FONT_COLORS
    font-size: $FONT_SIZES
    font-weight: $FONT_WEIGHTS
}

$global-text = {
    line-height: {
        read: 1.5em
    }
    color: $FONT_COLORS
    font-size: $FONT_SIZES
    font-weight: $FONT_WEIGHTS
}

$uikit-list = {
    color: $FONT_COLORS
}

$global-box = {
    background-color: $BG_COLORS
}

$global-tags = {
    border-radius: 10px
    background-color: $BG_COLORS
}

$global-panel = {
    border-radius: 10px
    background-color: $BG_COLORS
}
