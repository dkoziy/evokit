for name, value in $global-size
    +media-selector('.list_size_'+name)
        margin-top: -(floor(value / 2))
        margin-bottom: -(ceil(value / 2))

        & > .list__item
            padding-top: (floor(value / 2))
            padding-bottom: (ceil(value / 2))

        &[class*='list_theme_divider']
            margin-top: -(value)
            margin-bottom: -(value)

            & > .list__item
                padding-top: value
                padding-bottom: value
